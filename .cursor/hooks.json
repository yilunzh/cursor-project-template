{
  "version": 1,
  "hooks": {
    "afterFileEdit": [
      {
        "command": "python3 .cursor/hooks/auto-format.py",
        "timeout": 30
      }
    ],
    "preToolUse": [
      {
        "command": "CLAUDE_HOOK_TYPE=PreToolUse python3 .cursor/hooks/implementation-plan-check.py",
        "matcher": "Shell"
      }
    ],
    "stop": [
      {
        "command": "CLAUDE_HOOK_TYPE=Stop python3 .cursor/hooks/implementation-plan-check.py"
      }
    ]
  }
}
